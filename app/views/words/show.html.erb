<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h1><%= @word.term %></h1>
      <%= link_to "Edit Word", edit_word_path(@word) %><%= link_to "Delete Word", word_path(@word), method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
      <h3><%= @word.pos %></h3>
      <p><%= @word.definition %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <h2>Examples</h2>
      <hr>
      <%= link_to "Edit Example" %>
      <p></p>
      <%= link_to "Delete Example" %>
    </div>
  </div>
</div>
