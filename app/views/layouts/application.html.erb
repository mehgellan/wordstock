<!DOCTYPE html>
<html ng-app="wordstock">
  <head>
    <title>Wordstock</title>
    <%= csrf_meta_tags %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.5/angular.min.js"></script>
    <!-- ngRoute -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-route.min.js"></script>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="navbar navbar-default">
      <nav>
        <ul class="nav nav-pills">
          <li role="presentation" class="active"><%= link_to "Home", root_path %></li>
          <% if current_user %>
            <li role="presentation" class="nav-link">
              <a href="/users/<%= current_user.id %>">Profile</a>
            </li>
            <li role="presentation" class="nav-link">
              <a href="/logout">Log Out</a>
            </li>
          <% else %>
            <li role="presentation" class="nav-link">
              <a href="/signin">Sign Up</a>
            </li>
            <li role="presentation" class="nav-link">
              <a href="/login">Log In</a>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
    <% flash.each do |name, msg| %>
      <%= msg %>
    <% end %>

    <%= yield %>
  </body>
</html>
