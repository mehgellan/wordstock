<div class="container">
  <div class="row">
    <div class="col-md-12 col-xs-12" align="center">
      <div class="line"><h2><%= Time.now.strftime('%-I:%M %P') %></h2></div>
      <div class="outter"><img src="http://xacatolicos.com/app/images/avatar/icon-user.png" class="image-circle"/></div>
      <h1>Hello, <%= @user.first_name %></h1>
      <span>Member since <%= @user.created_at.strftime("%b %-d, %Y")%></span>
    </div>
    <div class="col-md-8 col-md-offset-3">
      <div class="col-md-4 col-xs-8 follow line" align="center">
        <h4>
          <span><%= link_to "Edit Account", edit_user_path(@user) %></span>
        </h4>
      </div>
      <div class="col-md-4 col-xs-8 follow line" align="center">
        <h4>
          <span><%= link_to "Delete Account", user_path(@user), method: :delete, data: {confirm: 'Are you sure you want to delete your account?'} %></span>
        </h4>
      </div>
    </div>
    <div class="col-md-12 col-xs-12" align="center">
      <h1><%= @user.first_name %>'s Topics</h1>
      <a href="/topics">Add a Topic</a>
      <ul>
        <% @user.topics.each do |topic| %>
        <li>
          <a href="/topics/<%= topic.id %>"><%= topic.name %></a>
          <span> -
            <% if topic.words.count == 1 %>
              <%= topic.words.count %> word
            <% else %>
              <%= topic.words.count %> words
            <% end %>
          </span>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
